{
  "name": "arbitrage",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10",
    "npm": ">=6.9.0"
  },
  "scripts": {
    "clean": "lerna clean && rm -rf ./node_modules/",
    "postinstall": "lerna exec npm install",
    "lint": "eslint --format=codeframe '**/*.js'",
    "test": "lerna run test --since master",
    "long-test": "lerna run test --stream",
    "clean-test": "npm run clean && npm run lint && npm run long-test",
    "update-version": "lerna version",
    "deploy": "lerna run deploy"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-monorepo": "^0.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lerna": "^3.13.3",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0"
  },
  "dependencies": {
    "arbitrage-lib": "file:packages/arbitrage-lib",
    "minute-tick-processor": "file:packages/minute-tick-processor"
  },
  "lint-staged": {
    "*.js": [
      "eslint --format=codeframe"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
