{
  "name": "arbitrage",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10",
    "yarn": ">=1.15"
  },
  "scripts": {
    "compile": "lerna run compile",
    "pretest": "yarn lint",
    "lint": "eslint --format=codeframe '**/*.js'",
    "test": "lerna run test --stream",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*'",
    "check-packages": "yarn clean && yarn compile && yarn test && yarn lint",
    "publish-packages": "./scripts/publish",
    "lerna-wizard": "npx lerna-wizard",
    "upgrade-deps": "yarn upgrade-interactive --latest",
    "boot": "lerna bootstrap"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-monorepo": "^0.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lerna": "^3.13.3",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0"
  },
  "dependencies": {
    "arbitrage-lib": "file:packages/arbitrage-lib",
    "minute-tick-processor": "file:packages/minute-tick-processor"
  },
  "lint-staged": {
    "*.js": [
      "eslint --format=codeframe"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
