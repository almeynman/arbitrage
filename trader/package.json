{
  "name": "trader",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "clj -A:shadow-cljs compile core",
    "nrepl": "yarn nrepl:server & (sleep 30; yarn nrepl:node)",
    "test": "clojure -A:test -m kaocha.runner",
    "test:unit": "clojure -A:test -m kaocha.runner unit",
    "test:features": "clojure -A:test -m kaocha.runner features",
    "clean": "rm -rf build .cpcache .repl-* .shadow-cljs node_modules features/support",
    "nrepl:server": "clj -A:shadow-cljs -R:nrepl -C:cucumber watch core",
    "nrepl:node": "node build/core.js",
    "test:cucumber": "yarn test:cucumber:compile && yarn test:cucumber:run",
    "test:cucumber:run": "cucumber-js features/simple_math.feature --require 'features/support/{steps_example,world_example}.js'",
    "test:cucumber:compile": "clj -A:shadow-cljs -C:cucumber compile cucumber"
  },
  "dependencies": {
    "big.js": "^5.2.2",
    "ccxt": "^1.21.26"
  },
  "devDependencies": {
    "cucumber": "^6.0.5"
  }
}
