{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "**/*.ts",
    "./implementation/dynamodb-opportunity-repository.ts",
    "./implementation/dynamodb-opportunity-repository.test.ts"
  ],
  "exclude": ["node_modules/**/*"]
}
