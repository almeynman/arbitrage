{
  "name": "persistor",
  "version": "0.0.1",
  "main": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "test": "ava -T 30s test/*.test.js --verbose",
    "simulate-minute-tick": "gcloud pubsub topics publish minute-tick --message minute-tick",
    "simulate-symbol-tick": "gcloud pubsub topics publish symbol-tick --message '{\"exchangeIds\": [\"bitfinex\", \"kraken\"], \"symbol\":\"BTC/USD\"}'",
    "deploy-minute-tick-processor": "gcloud functions deploy minuteTickProcessor --trigger-topic minute-tick --runtime=nodejs10 --region=europe-west1",
    "deploy-symbol-tick-processor": "gcloud functions deploy symbolTickProcessor --trigger-topic symbol-tick --runtime=nodejs10 --region=europe-west1",
    "deploy-opportunity": "gcloud functions deploy opportunity --trigger-topic opportunity --runtime=nodejs10 --region=europe-west1",
    "package": "cd ../arbitrage-lib && npm version 0.0.1 --allow-same-version && npm pack && mv arbitrage-lib*.tgz ../persistor/ && cd ../persistor && npm install file:arbitrage-lib-0.0.1.tgz",
    "deploy": "npm run package-arbitrage-lib && npm run deploy-minute-tick-processor && npm run deploy-symbol-tick-processor"
  },
  "dependencies": {
    "@google-cloud/firestore": "^1.3.0",
    "@google-cloud/pubsub": "^0.28.1",
    "arbitrage-lib": "file:arbitrage-lib-0.0.1.tgz",
    "ccxt": "^1.18.507",
    "core": "../core",
    "rxjs": "^6.5.1"
  },
  "devDependencies": {
    "ava": "^1.4.1",
    "proxyquire": "^2.1.0",
    "sinon": "^7.3.2"
  }
}
